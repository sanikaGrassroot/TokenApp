<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".project.OrderManagement.GenerateOrder">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ViewUserName"
        android:layout_below="@id/appbar"
        android:text="Sanika"
        style="@style/ProfileTitle"/>

    <Spinner
        style="@style/ProfileContent"
        android:id="@+id/productSpinner"
        android:layout_below="@id/ViewUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        style="@style/ProfileContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/customerSpinner"
        android:layout_below="@id/productSpinner"/>
    <Button
        style="@style/ButtonStyle"
        android:id="@+id/generateOrderButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/generate_order"
        android:layout_below="@id/customerSpinner"/>
    <android.support.v7.widget.CardView
        android:id="@+id/tokenCardView"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:elevation="10dp"
        app:cardCornerRadius="5dp"
        android:layout_below="@id/generateOrderButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/generatedImage"
        android:src="@drawable/ic_token_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        /></android.support.v7.widget.CardView>
</RelativeLayout>